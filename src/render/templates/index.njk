{% extends "layout.njk" %}

{% set pageTitle = site.title %}
{% set pageDescription = site.description %}
{% set canonicalUrl = site.base_url %}
{% set ogType = "website" %}
{% set ogImage = "" %}

{% block content %}
  <div class="max-w-4xl">
    <h1 class="text-3xl font-bold text-white mb-8">Latest Articles</h1>
    <div class="space-y-6">
      {% for article in articles %}
        <article class="rounded-lg border border-slate-800 bg-slate-900/30 p-6 hover:bg-slate-900/50 transition-colors">
          <h2 class="text-2xl font-semibold text-white">
            <a href="/{{ article.slug }}.html" class="hover:text-slate-300 transition-colors">{{ article.title }}</a>
          </h2>
          <p class="mt-2 text-sm text-slate-400">{{ (article.published_at * 1000) | date("Y-m-d") }}</p>
          <p class="mt-3 text-slate-200">{{ article.summary }}</p>
          <div class="mt-4 flex flex-wrap gap-2">
            {% for tag in article.tags %}
              <a href="/tags/{{ tag }}/" class="rounded-full bg-slate-800 px-3 py-1 text-xs text-slate-200 hover:bg-slate-700 transition-colors">#{{ tag }}</a>
            {% endfor %}
          </div>
        </article>
      {% endfor %}
    </div>
  </div>
{% endblock %}
